<!doctype html>
<html>
  <head>
    <title>Welcome to <%=gymName%></title>
    <link rel="stylesheet"  type="text/css" href="main.css" />
  </head>
  <body>
    <div class="menu">
      <button class="menu_button">Menu</button>
      <div class="menu-content">
        <a href="/">Home</a>
        <a href="about">About Us</a>
        <a href="weather">Check the weather!</a>   
        <a href="classes">See whats on this week</a>
        <a href="search">Find a class</a>
        <a href="bookings">Book a class</a>  
        <a href="profile">Manage account</a>
        <a href="logout">Logout</a>
      </div>
    </div>
    <h1><%= member.firstName %> <%= member.lastName %> Member ID: <%= member.memberId %></h1>    
    <h3>Classes currently booked</h3>    
  <div class="profile_table_box">
    <table>
      <tr>
        <th>Name</th>
        <th>Day</th>
        <th>Start</th>
        <th>End</th>
        <th>Trainer</th>
        <th></th>
      </tr>
      <% bookedClasses.forEach(function(bookedClass) { %>
      <tr>
        <td><%=bookedClass.name %></td>
        <td><%=bookedClass.day%></td>
        <td><%=bookedClass.start%></td>
        <td><%=bookedClass.end%></td>
        <td><%=bookedClass.trainer%></td>
        <td>
          <form action="/cancelBooking" method="post" onsubmit="return confirmCancellation()">
            <input type="hidden" name="bookingId" value="<%= bookedClass.booking_id %>">
            <button type="submit">Cancel</button>
        </form>
        </td>
      </tr>
      <% }) %>
    </table>
  </div> 
  <script>
    function confirmCancellation() {
        return confirm("Are you sure you want to cancel this booking?");
    }
  </script>
  <br>
  <br>
  <br>
  <form action="/deleteAccount" method="post">
    <button type="submit" onclick="return confirm('Are you sure you want to delete your account?')">Delete Account</button>
  </form>
  </body>
</html>
